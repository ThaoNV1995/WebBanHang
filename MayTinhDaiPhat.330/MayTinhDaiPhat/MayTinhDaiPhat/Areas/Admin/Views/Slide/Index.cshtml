@using System.Activities.Expressions
@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<MayTinhDaiPhat.Models.Slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên Slide
        </th>
        <th>
            Ảnh Slide
        </th>
        <th>
            Số thứ tự
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr id="row_@item.MaSlide">
        <td>
            @Html.DisplayFor(modelItem => item.TenSlide)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnhSlide)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STT)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaSlide }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaSlide }) |
            @Ajax.ActionLink("Xóa", "Delete", new { id = @item.MaSlide }, new AjaxOptions()
                {
                    Confirm = "Bạn có muốn xóa bản ghi này không",
                    OnComplete = "$('#row_" + @item.MaSlide + "').remove()",
                    HttpMethod = "Delete"
                }, new { @class = "btn btn-danger btn-xs btn-edit" })
        </td>
    </tr>
}

</table>
