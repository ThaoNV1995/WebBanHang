
@using System.Activities.Expressions
@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<MayTinhDaiPhat.Models.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="search-button">
    <label>
        @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
        {
            <input type="text" id="keyword" name="searchString" class="input_search autocomplete ui-autocomplete-input" placeholder="Từ khóa tìm kiếm..." value="@ViewBag.searchString" autocomplete=" off">
            <input type="submit" class="btn_search icon icon_search" value="">
        }
    </label>
</div>

<table class="table">
    <tr>
        <th>
            Tên danh mục
        </th>
        <th>
            Tên thương hiệu
        </th>
        <th>
           Tên sản phẩm
        </th>
        <th>
            Ảnh sản phẩm
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Khuyến mãi
        </th>
        <th>
            Chi tiết
        </th>
        <th>
            Giá bán
        </th>
        <th>
           Giá cũ
        </th>
        <th>
            Bảo hành
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Lượt xem
        </th>
        <th>
           Ngày đăng
        </th>
        <th>
            Ngày cập nhật
        </th>
        <th>
            Hiển thị
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
{
    <tr id="row_@item.MaSP">
        <td>
            @Html.DisplayFor(modelItem => item.DanhMuc.TenDM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThuongHieu.TenTH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnhSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhuyenMai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChiTiet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaCu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BaoHanh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LuotXem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HienThi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
            @Ajax.ActionLink("Xóa", "Delete", new { id = @item.MaSP }, new AjaxOptions()
                {
                    Confirm = "Bạn có muốn xóa bản ghi này không",
                    OnComplete = "$('#row_" + @item.MaSP + "').remove()",
                    HttpMethod = "Delete"
                }, new { @class = "btn btn-danger btn-xs btn-edit" })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
