@model List<MayTinhDaiPhat.Models.DanhMuc>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section masterjs
{
    <link type="text/css" href="~/Content/assets/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet">
    <link type="text/css" href="~/Content/assets/plugins/datatables/dataTables.fontAwesome.css" rel="stylesheet">
    <script type="text/javascript" src="~/Content/assets/plugins/datatables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/assets/demo/demo-datatables.js"></script>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh Mục Sản Phẩm</h2>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Ảnh</th>
                            <th>Tên Quảng Cáo</th>
                            <th>STT</th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td><img src="@item.Icon" style="width:30px;height:30px;" /></td>
                                <td>@item.TenDM</td>
                                <td>@item.MaCha</td>
                                <td width="200px">
                                    <i class="fa fa-pencil-square-o"></i>@Html.ActionLink("Sửa", "Edit", new { id = item.MaDM }) |
                                    <i class="fa fa-trash-o"></i>@Html.ActionLink("Xóa", "Delete", new { id = item.MaDM })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>
