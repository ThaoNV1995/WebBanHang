@using System.Activities.Expressions
@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<MayTinhDaiPhat.Models.NhanVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section masterjs
{
    <link type="text/css" href="~/Content/assets/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet">
    <link type="text/css" href="~/Content/assets/plugins/datatables/dataTables.fontAwesome.css" rel="stylesheet">
}

<div class="row">
    <div class="col-md-12">
        <div class="padding-bottom-10">
            <a href="/Admin/NhanVien/Create" class="btn btn-primary">Thêm</a>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh Mục Nhân Viên</h2>
                <div class="panel-ctrls">
                    <div class="search-button">
                        <label>
                            @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
                            {
                                <input type="text" id="keyword" name="searchString" class="input_search autocomplete ui-autocomplete-input" placeholder="Từ khóa tìm kiếm..." value="@ViewBag.searchString" autocomplete=" off">
                                <button type="submit" class="btn btn-success">Tìm Kiếm</button>
                            }
                        </label>
                    </div>
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Tên Nhân Viên</th>
                            <th>Tên Đăng Nhập</th>
                            <th>Mật Khẩu</th>
                            <th>Quyền</th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeA">
                                <td>@item.TenNV</td>
                                <td>@item.TenDangNhap</td>
                                <td>@item.MatKhau</td>
                                <td class="center">@item.MaQuyen</td>
                                <td width="200px">
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }) |
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchString }))
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>
