@using System.Activities.Expressions
@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<MayTinhDaiPhat.Models.QuangCao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên quảng cáo
        </th>
        <th>
            Ảnh quảng cáo
        </th>
        <th>
            Số thứ tự
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td id="row_@item.MaQC">
            @Html.DisplayFor(modelItem => item.TenQC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnhQC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STT)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaQC }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaQC }) |
         @Ajax.ActionLink("Xóa", "Delete", new { id = @item.MaQC }, new AjaxOptions()
                {
                    Confirm = "Bạn có muốn xóa bản ghi này không",
                    OnComplete = "$('#row_" + @item.MaQC + "').remove()",
                    HttpMethod = "Delete"
                }, new { @class = "btn btn-danger btn-xs btn-edit" })
        </td>
    </tr>
}

</table>
